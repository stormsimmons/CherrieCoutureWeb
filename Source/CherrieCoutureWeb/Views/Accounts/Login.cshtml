
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/loginStyles.css" />

@model CherrieCoutureWeb.Models.Login.LoginViewModel
<h2>Login</h2>


<div class="wrapper">
    <form class="form-signin" method="post">
        <h2 class="form-signin-heading">Please login</h2>
        <input asp-for="UserName" type="text"  class="form-control" name="username" placeholder="Username" required="" autofocus="" />
        <input asp-for="Password" type="password"  class="form-control" name="password" placeholder="Password" required="" />
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    </form>
</div>

